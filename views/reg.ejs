<%- include header %>


<form class="form-horizontal" method="post">
<div class="modal-header">
<h4>用户注册</h4>
</div>
<div class="modal-body">

<div class = "form-group">                                       
<label for = "username" class = "col-lg-2 control-label">用户名:</label>
<div class = "col-lg-10">                                           
<input type = "text" class = "form-control" id = "username" name = "username" placeholder = "用户名">
</div>                                       
</div>                                   

<div class = "form-group">                                       
<label for = "password" class = "col-lg-2 control-label">密码:</label>
<div class = "col-lg-10">                                           
<input type = "password" class = "form-control" id = "password" name = "password" placeholder = "密码">
</div>                                       
</div>                                       

<div class = "form-group">                                       
<label for = "password" class = "col-lg-2 control-label">确认密码:</label>
<div class = "col-lg-10">                                           
<input type = "password" class = "form-control" id = "password" name = "password-repeat" placeholder = "确认密码">
</div>                                       
</div>                                       

<div class = "form-group">                                       
<label for = "contact-email" class = "col-lg-2 control-label">Email:</label>
<div class = "col-lg-10">                                           
<input type = "email" class = "form-control" id = "email"  name = "email" placeholder = "you@example.com">
</div>                                       
</div> 
                                  
</div>

<div class="modal-footer">
<a class="btn btn-default" data-dismiss="modal">Close</a>
<button class="btn btn-primary" type="submit" href="/reg">Send</button>
</div>
</form>
<%- include footer %>

